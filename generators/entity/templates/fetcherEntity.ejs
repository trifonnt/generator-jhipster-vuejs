}
module.exports.deleteImage = function(id) {
	if(Array.isArray(id)) {
		return axios.delete('/files', {data: {ids: id }}).then(data=>data);
	}
	return axios.delete('/files/'+id).then(data=>data.data)
}
module.exports.updateField = function(masterId, fieldName, val) {
	return axios.patch('<%=pluralize(toDashed(name))%>/'+masterId, [{
		op: 'replace',
		path: '/'+fieldName,
		value: val,
	}], {
		headers: {
			'content-type': 'application/json-patch+json'
		}
	})
}
